function formatSeconds(value) {
    var s = parseInt(value) % 60;// 需要转换的时间秒
    var h = parseInt(value) / 60;// 分
    var result = '';
    if (s > 0) {
        result = "" + parseInt(s) + "秒";
    }
    if (h > 0) {
        result = "" + parseInt(h) + "分" + result;
    }

    return result;
}

function changeNum(data) {
